{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["target/types/*"]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["mocha", "chai", "node"]
  },
  "include": ["tests/**/*.ts", "target/types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}