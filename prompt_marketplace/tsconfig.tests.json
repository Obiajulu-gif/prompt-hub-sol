{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "types": ["node", "mocha"],
      "baseUrl": ".",
      "paths": {
        "@project/anchor": ["anchor/src"],
        "@/*": ["./src/*"]
      }
    },
    "include": ["tests/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }